{
  "name": "cryptowlx",
  "version": "1.0.0",
  "description": "API crypto monitor",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon --exec ts-node src/index.ts",
    "test-server": "NODE_ENV=test ts-node src/index.ts",
    "build": "tsc",
    "test": "NODE_ENV=test nodemon --exec ts-node src/index.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./src/config/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:drop": "npm run typeorm -- schema:drop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramorenov/cryptowlx.git"
  },
  "keywords": [
    "crypto",
    "currency",
    "monitor"
  ],
  "author": "Ricardo Andres Moreno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramorenov/cryptowlx/issues"
  },
  "homepage": "https://github.com/ramorenov/cryptowlx#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.4.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.1.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.34"
  }
}
